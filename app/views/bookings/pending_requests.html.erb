<div class="container">
  <h1 class="title p-2">Requests made for your boats</h1>


    <% if @pending_requests.empty? %>
      <p>You currently have no requests</p>
      <% else %>
      <p>Please Accept or reject</p>
      <div class="cards m-5">

      <% @pending_requests.each do |booking| %>
        <% if  booking.status == "pending" %>
          <div class="card-trip m-1">

            <div class="booking-pic">
              <%= cl_image_tag booking.boat.photo.key, height: 300, width: 400, crop: :fill %>
            </div>

            <div class="booking-info p-2">
              <h2><%= booking.boat.name %> in <%= booking.boat.location %> üìç</h2>
              <p>From <%= booking.start_date.strftime("%B %d, %Y") %> to
              <%= booking.end_date.strftime("%B %d, %Y") %></p>
              <p>Status: <%= booking.status %></p>
              <p>The total price is <%= booking.total_price %></p>

              <%= link_to "Accept", accept_path(booking), data: {turbo_method: :patch} , class: "btn Mbtn-flat"%>
              <%= link_to "Reject", reject_path(booking), data: {turbo_method: :patch} , class: "btn Mbtn-ghost"%>

            </div>
          </div>
        <% end %>
      <% end %>
      </div>


      <p>These are previous requests</p>
      <div class="cards m-5">
      <% @pending_requests.each do |booking| %>
        <% if  booking.status != "pending" %>
          <div class="card-trip m-1">

          <div class="booking-pic">
          <%= cl_image_tag booking.boat.photo.key, height: 300, width: 400, crop: :fill %>
          </div>

          <div class="booking-info p-2">
          <h2><%= booking.boat.name %> in <%= booking.boat.location %> üìç</h2>
          <p>From <%= booking.start_date.strftime("%B %d, %Y") %> to
          <%= booking.end_date.strftime("%B %d, %Y") %></p>
          <p>Status: <%= booking.status %></p>
          <p>Total price was <%= booking.total_price %></p>

          </div>
          </div>
        <% end %>
      <% end %>
      </div>
    <% end %>
</div>
